<!DOCTYPE html>
<html>
<head>
  <title>Login System</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
<div class="container">  
  <header class="navbar navbar-fixed-top navbar-default">
    <div class="container">
      <%= link_to "Login System", users_path, class: "btn btn-lg btn-success", id: "logo" %>
      <nav>
        <ul class="nav nav-pills headerDetail">	
          <li role="presentation"><%= link_to "All Users", users_path %></li>
          <% if logged_in? %>
            <li role="presentation"><%= link_to "Logout", logout_path %></li>
          <% else %>
            <li role="presentation"><%= link_to "Log in", login_path %></li>
          <% end %>
        </ul>
      </nav>  
    </div>
  </header>
  <% flash.each do |name, msg| %>
    <% if msg.is_a?(String) %>
      <div class="alert alert-<%= name == :notice ? "success" : "error" %>">
        <a class="close" data-dismiss="alert">&#215;</a>
        <%= content_tag :div, msg, :id => "flash_#{name}" %>
      </div>
    <% end %>
  <% end %>

  <%= yield %>

</div>
</body>
</html>
