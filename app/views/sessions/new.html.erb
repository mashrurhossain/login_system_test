<h4>Please Log in</h4>
<div class="well">
  <%= form_tag '/login' do %>
    <div class="form-group">
      <%= label_tag :username %><br/>
      <%= text_field_tag :username %>
    </div>
    <div class="form-group">
      <%= label_tag :password %><br/>
      <%= password_field_tag :password %>
    </div>
    <%= submit_tag 'Login', class: 'btn btn-success' %>
  <% end %>
</div>